<div class="container" style="max-width: 400px;">
<table class="table">
  <tr>
    <th>名前</th>
    <th>メールアドレス</th>
    <th>管理者権限</th>
    <th><%= link_to '戻る', admin_users_path %></th>
  </tr>

  <tr>
    <td><%= @user.user_name %></td>
    <td><%= @user.email %></td>
    <td><%=  "私は管理者" if @user.admin == true %></td>
  </tr>
</table>
</div>
<div class="container">
<table class="table table-striped">
  <thead>
    <tr>
      <th>名前</th>
      <th>内容</th>
      <th>製作日</th>
      <th>期限</th>
      <th>状態</th>
      <th>優先度</th>
      
     
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.task_name %></td>
        <td><%= task.content %></td>
        <td><%= task.created_at.strftime("%Y-%m-%d %H:%M") %></td>
        <td><%= task.limit %></td>
        <td><%= task.status%></td>
        <td><%= task.priority %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>
</div>


