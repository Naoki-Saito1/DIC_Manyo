<div class="container">
<table class="table table-striped">
  <thead>
    <tr>
      <th>id</th>
      <th>名前</th>
      <th>email</th>
      <th>製作日</th>
      <th>タスク数</th>
      <th>管理者</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.user_name %></td>
        <td><%= user.email %></td>
        <td><%= user.created_at.strftime("%Y-%m-%d %H:%M") %></td>
        <td><%= user.tasks.count %></td>
        <td><%=  "私は管理者" if user.admin == true %></td>
        <td><%= link_to "編集する", edit_admin_user_path(user) %></td>
        <td><%= link_to '詳細', admin_user_path(user) %></td>
        <td><%= link_to '削除', admin_user_path(user), method: :delete, data: { confirm: 'まじ?' }%></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
