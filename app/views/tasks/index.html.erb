<p id="notice"><%= notice %></p>

<h1>タスク一覧</h1> 
<%= form_with url: tasks_path,scope: :task, method: :get, local: true do |search| %>
    <%= search.label :'task_name' %>
    <%= search.text_field :task_name %>
    <%= search.label :'status'%>
    <%= search.select :status, Task.statuses.keys.to_a, { include_blank:'選択してください'}  %>
    <%= search.submit 'Search' %>
  <% end %>
<table>
  <thead>
    <tr>
      <th>名前</th>
      <th>内容</th>
      <th>製作日</th>
      <th>期限</th>
      <th>状態</th>
      <th>優先度</th>
      <th></th>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td class="task_list"><%= task.task_name %></td>
        <td><%= task.content %></td>
        <td><%= task.created_at.strftime("%Y-%m-%d %H:%M") %></td>
        <td class="task_list"><%= task.limit %></td>
        <td class="task_list"><%= task.status%></td>
        <td class="task_list"><%= task.priority %></td>
        <td><%= link_to '詳細', task %></td>
        <td><%= link_to '編集', edit_task_path(task) %></td>
        <td><%= link_to '削除', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to "終了期限でソートする", tasks_path(sort_expired: "true") %>
<%= link_to "優先順位でソートする", tasks_path(sort_priority: "true") %>
<%= link_to '新規タスク', new_task_path %>
<%= link_to '戻る', tasks_path %>
